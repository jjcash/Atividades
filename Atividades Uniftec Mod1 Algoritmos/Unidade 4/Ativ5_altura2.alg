algoritmo "Ativ5_altura"
var
ano, andre, pedro : inteiro
inicio
      ano <- 0
      andre <- 150
      pedro <- 130
      enquanto (pedro < andre) faca
               ano <- ano + 1
               pedro <- pedro + 3
               andre <- andre + 2
      fimenquanto
      escreva("Vai demorar", ano)
      escreval(" anos para o Pedro ser maior que o Andre!")
fimalgoritmo
